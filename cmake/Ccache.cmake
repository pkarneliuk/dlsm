option(ENABLE_CCACHE "Enable Ccache wrapper" ON)
find_program(CCACHE_EXECUTABLE ccache)
if((ENABLE_CCACHE OR DEFINED ENV{ENABLE_CCACHE}) AND CCACHE_EXECUTABLE)
    set(CCACHE_CMD ${CCACHE_EXECUTABLE} cache_dir=${CMAKE_CURRENT_BINARY_DIR})
    set(CMAKE_C_COMPILER_LAUNCHER   ${CCACHE_CMD})
    set(CMAKE_CXX_COMPILER_LAUNCHER ${CCACHE_CMD})
    message(STATUS "Enabled Ccache: ${CCACHE_CMD}")
endif()
